{
  "expo": {
    "scheme": "acme",
    "plugins": [
      "expo-router",
      ["expo-camera"],
      ["expo-location"],
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true
          },
          "ios": {
            "useFrameworks": "static"
          }
        }
      ]
    ],
    "name": "TrashTag",
    "slug": "TrashTag",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "app/assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "app/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffd300"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to capture before/after photos of cleanup areas.",
        "NSLocationWhenInUseUsageDescription": "This app uses location to tag cleanup areas on the map."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "app/assets/adaptive-icon.png",
        "backgroundColor": "#ffd300"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.READ_MEDIA_IMAGES"
      ]
    },
    "web": {
      "favicon": "app/assets/favicon.png"
    }
  }
}
